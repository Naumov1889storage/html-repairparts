.index {
  h1 {
    padding: 36px 10px 30px 10px
    text-align: center
  }

  &__search {
    display: flex
    justify-content: center
    align-items center
    padding: 0 18px 0 18px
    min-height: 76px
    border: 1px solid #c7c7c7
    background-color: #f7f7f7

    .select__wrap {
      position: relative
      margin: 0 18px 0 0
      width: 167px
      height: 30px
      background: #fbfbfb
      border-radius: 3px
      cursor: pointer
      &:before {
        content: ''
        position: absolute
        z-index: 2
        top: 1px
        bottom: 1px
        right: 1px
        width: 27px
        background-color: #f1f7fc
        border-left: 1px solid #c7c7c7
        border-radius: 0 3px 3px 0
      }
      &:after {
        content: ''
        position: absolute
        z-index: 3
        top: 1px
        bottom: 1px
        right: 1px
        width: 27px
        background: url(/img/icon-arrow.png) center no-repeat
        trasition: .3s
      }
    }
    select {
      position: relative
      z-index: 5
      padding: 0 32px 0 12px
      width: 100%
      height: 100%
      font: 16px/21px Candara, sans-serif
      font-weight: 400
      color: #8d8d8d
      border: 1px solid #afafaf
      border-radius: 3px
      background: transparent
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      &::-ms-expand {
        display: none
      }
      option {
        color: #afafaf
        &:checked {
          color: #000000
        }
      }
    }
    button {
      width: 103px
      height: 30px
      color: #434343
      border: 1px solid #afafaf
      background-color: #fceec3
    }
  }

}


.menu-car-wrap {
  padding: 0 32px 0 32px;
}
.menu-car {
  display: flex
  text-align: center
}
.menu-car, .menu-model {
  position: relative;
  z-index: 2;
  flex-wrap: wrap;
  -webkit-flex-wrap: wrap;
  -ms-flex-wrap: wrap;
  padding: 20px 0 37px 0;
  justify-content: safe center;
  -ms-flex-pack: center;
  -webkit-box-pack: center;
  -webkit-justify-content: flex-start;
}
.menu-car::after, .menu-car::before {
  content: '';
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: 0 -1px 0 -1px;
  background-color: aqua;
}
.menu-car::before {
  background-color: white;
  z-index: 2;
  margin: 0;
}
.menu-car::after {
  background: -moz-linear-gradient(-90deg, rgba(199,199,199,1) 0%, rgba(255,255,255,1) 15%, rgba(255,255,255,1) 85%, rgba(199,199,199,1) 100%); /* ff3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, rgba(199,199,199,1)), color-stop(15%, rgba(255,255,255,1)), color-stop(85%, rgba(255,255,255,1)), color-stop(100%, rgba(199,199,199,1))); /* safari4+,chrome */
  background: -webkit-linear-gradient(-90deg, rgba(199,199,199,1) 0%, rgba(255,255,255,1) 15%); /* safari5.1+,chrome10+ */
  background: -o-linear-gradient(-90deg, rgba(199,199,199,1) 0%, rgba(255,255,255,1) 15%, rgba(255,255,255,1) 85%, rgba(199,199,199,1) 100%); /* opera 11.10+ */
  background: -ms-linear-gradient(-90deg, rgba(199,199,199,1) 0%, rgba(255,255,255,1) 15%, rgba(255,255,255,1) 85%, rgba(199,199,199,1) 100%); /* ie10+ */
  background: linear-gradient(180deg, rgba(199,199,199,1) 0%, rgba(255,255,255,1) 15%, rgba(255,255,255,1) 85%, rgba(199,199,199,1) 100%);
}
.menu-car li {
  position: relative;
  z-index: 2;
  width: 20%
  //margin: 10px 10px 0 10px;
  padding: 10px 10px 0 10px;
  //margin: 10px 0 0 0;
}
.menu-car li a {
  font-weight: 400;
  color: #0e1015;
  cursor: pointer;
  img {
    display: block
    margin: 0 auto
  }
}
  
@media (max-width: 990px) {
  .menu-car li {
    width: 25%
  }
}

@media (max-width: 820px) {
  .index {
    .container {
      padding: 0
    }
    &__search {
      flex-direction: column
      padding-top: 12px
      padding-bottom: 24px
      border-left: none
      border-right: none
      .select__wrap {
        margin: 12px 0 12px 0
        max-width: 240px
        width: 100%
      }
      button {
        margin-top: 12px
        max-width: 240px
        width: 100%
      }
    }
  }

  .menu-car {
    &-wrap {
      padding: 0
    }
    &:before {
      display: none
    }
    &:after {
      display: none
    }
  }

}

@media (max-width: 600px) {
  .menu-car li {
    width: 33.3%
  }
}

@media (max-width: 500px) {
  .index {
    h1 {
      padding: 22px 10px 18px 10px
    }
  }
}