.catalog {
  h1 {
    padding-top: 20px
    text-align: left
  }
}

.catalog {
  height: 100%
  margin-bottom: 30px
  &_left {
    min-width: 288px
    width: 288px
    .catalog_search {
      position: relative
      display: flex
      height: 40px
      border: 1px solid #ababab
      input {
        position: absolute
        padding-left: 10px
        padding-right: 48px
        width: 100%
        height: 100%
        font-size: 16px
      }
      button {
        position: absolute
        top: 0
        right: 0
        width: 38px
        height: 100%
        background: #ffffff url(/img/icon-search2.png) no-repeat 10px
        &:before {
          content: ''
          position: absolute
          top: 4px
          bottom: 4px
          left: 0
          width: 1px
          background: #ababab
        }
      }
    }
    .decor-useless {
      margin: 0 12px 0 12px
      height: 17px
      background: #f9f9f9
      border-left: 1px solid #ababab
      border-right: 1px solid #ababab
    }
    .accordion {
      &_title {
        position: relative
        display: flex !important
        align-items: center
        padding-left: 50px
        height: 44px
        font-size: 15px
        border: 1px solid #cfcece
        border-bottom: none
        &:before {
          content: ''
          position: absolute
          top: 50%
          transform: translateY(-50%)
          left: 5px
          width: 42px
          height: 40px
          background: #000000 url(/img/iconset-catalog.jpg) no-repeat
        }
        .arrow {
          position: absolute
          top: 50%
          margin-top: -7px
          transform:rotate(0deg)
          right: 8px
        }
        &.active {
          font-weight: 600
          border-bottom: 1px solid #cfcece
          .arrow {
            transform: rotate(180deg);
          }
        }
      }
      &:nth-child(4) {
        .accordion_title:before {
          background-position: 0px -43px
        }
      }
      &:nth-child(5) {
        .accordion_title:before {
          background: blue
        }
      }
      &:nth-child(6) {
        .accordion_title:before {
          background: blue
        }
      }
      &:last-child {
        .accordion_content {
          border-bottom: 1px solid #ababab
        }
        .accordion_title {
          border-bottom: 1px solid #ababab
        }
      }
      &_content {
        margin: 0 12px 0 12px
        padding: 15px 0 20px 0
        text-align: left
        background: #f9f9f9
        border-left: 1px solid #ababab
        border-right: 1px solid #ababab
        ul {
          width: 100%
          height: 100%
          li {
            width: 100%
            &.active {
              a {
                font-weight: 600
                color: #ea5157
                &:before {
                  content: ''
                }
              }
            }
            a {
              position: relative
              display: block
              padding: 3px 10px 3px 24px
              width: 100%
              color: #000000
              &:before {
                content: 'Â»'
                position: absolute
                left: 12px
              }
              &:hover {
                &:before {
                  content: ''
                }
              }
            }
          }
        }
      }
    }
  }
  &_right {
    position: relative
    margin-left: 27px
    width: 100%
    &_imgbg {
      position: absolute
      top: 0
      right: -17px
    }
    .img-left {
      align-items: flex-start
      img {
        margin-right: 18px
      }
    }
    .divider.left {
      margin: 10px 0 25px 0
      b {
        display: block
        width: 105px
        font-family: Impact
        font-size: 24px
        color: #5a5a5a
      }
    }
  }
}

.catalog_closed {
  padding: 0px 36px 0 0
  .title {
    position: relative
    margin-bottom: 73px
    font-family: Impact
    font-size: 290px
    font-weight: 400
    line-height: 223px
    text-transform: uppercase
    color: #f6f6f6
    text-shadow: -5px 5px 0px #e4e4e4
    img {
      position: absolute
      bottom: -60px
      right: -40px
    }
  }
  p {
    margin-bottom: 15px
    width: 100%
    font-size: 16px
    line-height: 21px
    text-align: justify
    color: #7a7a7a
  }
}

.catalog_opened {
  text-align: left
  font-family: Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif !important
}
.catalog {
  &_title {
    padding-bottom: 10px
    font-family: Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif !important
    font-size: 18px
    a {
      font-family: Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif !important
      color: #7eaedd
      text-decoration: underline
      &:visited {
        color: darken(#7eaedd, 35%)
      }
      &:hover {
        text-decoration: none
      }
    }
    span {
      font-family: Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif !important
    }
  }
  &_item__left {
    display: flex
    flex-direction: column
    align-items: center
    font-family: Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif !important
    padding-right: 15px
    border-right: 1px solid #cecece
    img {
      max-width: 220px
      max-height: 163px
    }
    span {
      margin-top: 13px
      font-family: Archive
      font-size: 20px
      font-weight: 600
    }
  }
  &_item__right {
    display: flex
    flex-direction: column
    justify-content: space-between
    padding: 0 15px 0 15px
    font-family: Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif !important
    line-height: 17px
    p {
      width: 100%
      text-align: left
      font-family: Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif !important
    }
    b {
      display: block
      margin-top: 12px
      font-weight: 600
      &:first-child {
        margin-top: 0
      }
    }
    .catalog_item__imgset {
      img {
        margin: 6px 10px 0 0
        width: 68px
        height: 50px
      }
    }
  }
}
.catalog_item {
  padding: 20px 0 24px 0
  border-top: 1px solid #cecece
  &:last-child {
    padding-bottom: 35px
  }
}

.car-under-menu {
  position: relative;
  margin: 0 auto;
  margin-top: 40px;
  width: 157px;
  height: 157px;
  border: 1px solid #cfcece
}
.car-under-menu img {
  position: absolute;
  top: 20px;
  left: -60px;
  min-width: 270px;
  height: 119px;
}


@media (max-width: 970px) {
  .catalog .container > .flex_row__between {
    flex-direction: column
  }
  .catalog_right {
    margin-left: 0
    margin-top: 30px
  }

  .catalog_closed {
    padding: 0
    .title {
      display: inline-block
    }
    p {

    }
    .img-left {
      display: block
      img {
        float: left
        margin-bottom: 5px
      }
    }
  }
  .catalog_right_imgbg {
    position: relative
    right: 0
  }
}

@media (max-width: 750px) {
  .catalog_right {
    .title {
      font-size: 200px
    }
  }
}

@media (max-width: 580px) {
  .catalog_right {
    .title {
      font-size: 170px
    }
  }
}

@media (max-width: 550px) {
  .catalog_item {
    .flex_row__start {
      flex-direction: column
    }
    .catalog_item__left {
      align-items: flex-start
      border: none
    }
    .catalog_item__right {
      padding:0
      width: 100%
      b:first-child {
        margin-top: 12px
      }
    }
  }
}

@media (max-width: 500px) {
  .catalog_closed {
    p {
      margin-top: 6px
      text-align: left
    }
  }
}

@media (max-width: 450px) {
  .container {
    padding: 0 10px
  }
  .catalog {
    &_left {
      min-width: 100%
      width: 100%
    }
  }
  .catalog_right {
    .title {
      margin-bottom: 10px
      font-size: 160px
      img {
        bottom: -2px
        height: 80px
      }
    }
  }
}

@media (max-width: 400px) {
  .catalog_right {
    .title {
      margin-bottom: 30px
      line-height: 120px
      font-size: 120px
      img {
        right: -20px
        bottom: -25px
        height: 60px
      }
    }
  }
}