.header {
  position: relative
  z-index: 101
  margin-bottom: 3px
  height: 67px
  background: #000
  color: #ffffff
  .container {
    height: 100%
  }
  &:after {
    content: ''
    position: absolute
    bottom: -3px
    width: 100%
    height: 3px
    background: linear-gradient(90deg, rgba(233,62,69,1) 0%, rgba(50,142,189,1) 100%);
  }

  &__search {
    position: relative
    margin: 0 12px 0 17px
    width: 320px
    height: 30px
    &:after {
      content: ''
      position: absolute
      top: -2px
      bottom: -2px
      right: -2px
      left: -2px
      background: linear-gradient(90deg, rgba(0,0,0,1) 0%, rgba(233,62,69,1) 100%)
      border-radius: 5px
    }
    input {
      position: relative
      z-index: 1
      padding: 0 50px 0 12px
      width: 100%
      height: 100%
      border-radius: 5px
      &::-webkit-search-cancel-button{
        display: none
      }
    }
    button {
      position: absolute
      z-index: 2
      top: 0
      right: 0
      width: 40px
      height: 30px
      background: #cc383f url(/img/icon-search.png) no-repeat 50%
      border-radius: 0 5px 5px 0
    }
  }

  &__contact {
    text-align: center
    .tel {
      margin-bottom: 4px
      font-family: Arial
      font-size: 22px
    }
    .loc {
      font-size: 14px
    }
  }

  &__basket {
    min-width: 36px
    height: 29px
    background: url(/img/icon-basket.png)
  }

  #header__burger {
    display: none
    .burger {
      padding-top: 10px
      width: 25px
      height: 24px
      &.active {
        i {
          background: transparent
          &:before,
          &:after {
            top: 0
          }
        }
      }
      i {
        height: 4px
        background-color: #cc383f
        &:before,
        &:after {
          height: 4px
          background-color: #cc383f
        }
        &:before {
          top: -10px
        }
        &:after {
          top: 10px
        }
      }
    }
  }
}

@media (max-width: 940px) {
    .header {
      height: 45px
      &__logo,
      &__contact {
        display: none
      }
      #header__burger {
        display: block
      }
    }
}