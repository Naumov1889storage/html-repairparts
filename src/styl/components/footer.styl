.footer {
  .container {
    padding-left: 40px
    height: 30px
    border: 1px solid #c7c7c7
    border-bottom: none
    background-color: #f7f7f7
  }
  &__vk {
    width: 20px
    height: 20px
    background: url(/img/iconset-footer.png) no-repeat
  }
  &__avito {
    margin-left: 8px
    width: 66px
    height: 19px
    background: url(/img/iconset-footer.png) -28px no-repeat
  }
}

@media (max-width: 990px) {
  .footer {
    .container {
      padding-left: 10px
      border-left: 0
      border-right: 0
    }
  }
}