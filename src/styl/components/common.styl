@font-face {
  font-family: Candara
  src: url('/fonts/Candara.ttf')
}
@font-face {
  font-family: Impact
  src: url('/fonts/Impact.ttf')
}
@font-face {
  font-family: Archive
  src: url('/fonts/Archive.ttf')
}

* {
  font-family: Candara, sans-serif
  font-size: 16px
  line-height: 21px
}
input,
textarea {
  padding: 0 0 0 12px
  font-family: Candara
  font-size: 16px;
  line-height: 21px;
  &::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
    color: #8d8d8d;
    opacity: 1; /* Firefox */
  }

  &:-ms-input-placeholder { /* Internet Explorer 10-11 */
    color: #8d8d8d;
  }

  &::-ms-input-placeholder { /* Microsoft Edge */
    color: #8d8d8d;
  }
}

html,
body {
  height: 100%;
}

body {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.toPushFooter {
  flex: 1 0 auto;
}
.footer {
  flex: 0 0 auto;
}

.container {
  margin: 0 auto
  padding: 0 10px 0 10px
  max-width: 990px
  width: 100%
}

.slash {
  &:before {
    content: '/'
    margin: 0 5px 0 5px
  }
}

.overlay {
  display: none
  position: fixed
  z-index: 100
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: rgba(0, 0, 0, .3)
  opacity 0
  transition: 3s
  &.active {
    display: block
    opacity 1
  }
}

.font-red {
  color: #e93e45;
}

.search {
  max-width: 230px
  width: 100%
  height: 30px
  input {
    width: 100%
    height: 100%
    border: 1px solid #afafaf
    border-radius: 5px
  }
  &--loup {
    position: relative
    input {
      padding-left: 9px
      padding-right: 27px
      &::-webkit-search-cancel-button{
        display: none
      }
    }
    button {
      position: absolute
      top: 1px
      right: 1px
      width: 27px
      height: 28px
      background: url(/img/icon-search2.png) no-repeat 4px center
      background-size: 15px 16px
    }
  }
  &--clear {
    position: relative
    input {
      padding-right: 35px
      background-color: #fbfbfb
      &::-webkit-search-cancel-button{
        display: none
      }
    }
    button {
      position: absolute
      top: 1px
      right: 1px
      width: 27px
      height: 28px
      background-color: #f1f7fc
      border-left: 1px solid #afafaf
      border-radius: 0 4px 4px 0
      &:after {
        content: ''
        position: absolute
        top: 0
        right: 0
        width: 100%
        height: 100%
        background: url(/img/icon-cross.png) no-repeat center
      }
    }
  }
}

h1, h1 > span {
  font-family: Archive
  font-size: 36px
  font-weight: 400
  line-height: 35px
  color: #464646
}

@media (max-width: 500px) {
    h1,
    h1 > span {
      font-size: 22px
      line-height: 25px
    }
}

.crumbs {
  display: flex
  flex-wrap: wrap
  margin: 8px 0 20px 0
  a {
    color: #3d8ed1
    &.current {
      pointer-events: none
      cursor: default
      color: #464646
    }
  }
  &__arrow {
    margin: 0 4px 0 4px
  }
  &__search {
    position: relative
    z-index: 2
    margin-left: 2px
    margin-right: 6px
    button[type='button'] {
      position: relative
      top: 1px
      width: 17px
      height: 16px
      border: 1px solid #afafaf
      border-radius: 3px
      background: #f1f7fc url(/img/icon-arrow.png) no-repeat center
      background-size: 11px 6px
      cursor: pointer
    }
    .content {
      position: absolute
      top: 30px
      padding: 11px 0 10px 0
      width: 173px
      transform: scaleY(0)
      transform-origin:top
      transition:.2s ease-out
      overflow: hidden
      border: 1px solid #afafaf
      background-color: #f3f3f3
      &.active {
        transform: scaleY(1)
      }
      form {
        position: relative
        margin: 0 auto
        width: 151px
      }
      ul {
        margin-top: 10px
        li {
          a {
            display: block
            padding-left: 20px
            color: #464646
            line-height: 28px
            &:hover {
              color: #000000
            }
          }
        }
      }
    }
  }
}
  
