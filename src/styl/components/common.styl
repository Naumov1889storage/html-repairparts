@font-face {
  font-family: Candara
  src: url('/fonts/Candara.ttf')
}
@font-face {
  font-family: Impact
  src: url('/fonts/Impact.ttf')
}
@font-face {
  font-family: Archive
  src: url('/fonts/Archive.ttf')
}

* {
  font-family: Candara
  font-size: 16px
  line-height: 21px
}
input,
textarea {
  padding: 0 0 0 12px
  font-family: Candara
  font-size: 16px;
  line-height: 21px;
  &::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
    color: #8d8d8d;
    opacity: 1; /* Firefox */
  }

  &:-ms-input-placeholder { /* Internet Explorer 10-11 */
    color: #8d8d8d;
  }

  &::-ms-input-placeholder { /* Microsoft Edge */
    color: #8d8d8d;
  }
}

html,
body {
  height: 100%;
}

body {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.toPushFooter {
  flex: 1 0 auto;
}
.footer {
  flex: 0 0 auto;
}

.container {
  margin: 0 auto
  padding: 0 10px 0 10px
  max-width: 990px
  width: 100%
}

.slash {
  &:before {
    content: '/'
    margin: 0 5px 0 5px
  }
}

.overlay {
  display: none
  position: fixed
  z-index: 100
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: rgba(0, 0, 0, .3)
  opacity 0
  transition: 3s
  &.active {
    display: block
    opacity 1
  }
}

.font-red {
  color: #e93e45;
}

h1, h1 > span {
  font-family: Archive
  font-size: 36px
  font-weight: 400
  line-height: 35px
  color: #464646
}